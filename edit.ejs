<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">

    
    <h2>Edit your Listing</h2>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input  name="listing[title]"
            value="<%= listing.title %>"
            type="text" class="form-control" required>
        </div>

        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" cols="30"
            rows="2" class="form-control" required>
            <%= listing.description %> </textarea>
        </div>

        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= listing.image.url %>">
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Upload New Image</lable>
            <input  name="listing[image]"
            type="file" class="form-control">
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input type="number"
            name="listing[price]"
            value="<%= listing.price.toLocaleString("en-IN") %>"
            class="form-control" required>
        </div>

        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input type="text"
            name="listing[country]"
            value="<%= listing.country %>" class="form-control" required>
        </div>
    </div>
        
        <div class="mb-3">
            <lable for="country" class="form-label">Location</lable>
            <input type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control" required>
        </div>
        
        
        <button class="btn btn-dark edit-btn mt-3 mb-3 ">Edit</button>
    </form>
</div>
</div>