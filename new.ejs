<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">

    <h2>Create a New Listing</h2><br>
    <form  method="POST" action="/listings" enctype="multipart/form-data">
        <div>
            <lable for="title" class="form-label">Title</lable>
            <input  name="listing[title]" placeholder="Add a catchy Title" 
            type="text" class="form-control" required><br>
        </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30"
            rows="2" class="form-control" required></textarea><br>
        </div>

        <div>
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]"
            class="form-control"><br>
            required
        </div>

        <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]"
            placeholder="1200" class="form-control" required><br>
        </div>

        <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]"
            placeholder="India" class="form-control" required><br>
        </div>
        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]"
            placeholder="Banglore , Pune" class="form-control" required><br>
        </div>

        
        
        <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
    </form>
</div>
</div>